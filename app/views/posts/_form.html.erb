

<%= render "shared/errors", obj: @post %>

<%= form_for @post do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :url %>
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p>
    <% @categories.each do |category| %>
      <%= f.label category.name, :class => "checkbox inline" %>
      <%= check_box("post", "category_ids", {:id => category.name, :multiple => true}, category.id, nil) %>
    <% end %>
  </p>

  <%= f.submit %>
<% end %>