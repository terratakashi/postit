<div class="row">
  <div class="span6 offset4">
    <h2>Sign in</h2>

    <%= form_tag "/login", :method => :post do %>
      <p>
        <%= label_tag :username %>
        <%= text_field_tag :username %>
      </p>
      <p>
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </p>
        <%= submit_tag("Submit", :class => "btn btn-primary") %>
    <% end %>
    
  </div>
</div>


  